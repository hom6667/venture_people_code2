<div id="<%= dom_id post %>">
  <!--
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>User:</strong>
    <%= post.user_id %>
  </p>
  -->
  <div class="jumbotron">
    <h1 class="display-4"><%= post.title %></h1>
    <p class="lead"><%= post.content %></p>
    <p><%= post.user.email %></p>
    <%= time_ago_in_words(post.created_at) %> Ago [ <%= post.created_at.strftime('%Y-%m-%d %H:%M') %> ]
    <div>
      <% if can? :update, @post %>
        <%= link_to "Edit this post", edit_post_path(@post),class: "btn btn-large btn-primary" %> |
      <% end %>
      <%= link_to "Back to posts", posts_path, class: "btn btn-large btn-primary" %>
      <br>
      <p>
        <div>
          <%= button_to "👍 #{@post.get_upvotes.size}", like_post_path(@post), method: :put,  class: "btn btn-outline-primary" %>
          <%= button_to "😞 #{@post.get_downvotes.size}", dislike_post_path(@post), method: :put, class: "btn btn-outline-primary" %>
        </div>
        <% if can? :destroy, @post %>
          <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger"  %>
        <% end %>
      </div>
    </div>
